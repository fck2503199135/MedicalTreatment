<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mapper.kz.HospitalMapper">


    <select id="getAllHospital" resultType="hospital" >
        select * from hospital where id=1
    </select>


    <select id="getAllDeptname" resultType="String">
        select deptname from  Dept;
    </select>


    <update id="updateHospital" parameterType="hospital">

        update hospital set hname=#{hname},address=#{address},owner_name=#{owner_name},owner_post=#{owner_post},major=#{major},introduction=#{introduction} where id=1
    </update>




</mapper>